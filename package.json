    "prettier": "^3.4.2",
    "prettier-plugin-astro": "^0.14.1",
    "sharp": "^0.33.5",
    "typescript": "^5.7.3"
  },
  "prettier": {
    "printWidth": 140,
    "trailingComma": "es5",
    "singleQuote": true,
    "importOrderCaseInsensitive": true,
    "importOrder": [
      "^react$",
      "^react/(.*)$",
      "<THIRD_PARTY_MODULES>",
      "@phosphor-icons",
      "@phosphor-icons/react",
      "^[./]"
    ],
    "plugins": [
      "prettier-plugin-astro",
      "@trivago/prettier-plugin-sort-imports"
    ],
    "overrides": [
      {
        "files": "*.astro",
        "options": {
          "parser": "astro"
        }
      }
    ]
  }
}
