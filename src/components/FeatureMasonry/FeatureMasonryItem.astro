---
import { Image } from 'astro:assets';
import dockerLogo from '../../images/docker-logo.svg';
import kubernetesLogo from '../../images/kubernetes-logo.svg';
import Icon from '../Icon.astro';
import type { TFeatureMasonryItem } from './types';

type Props = TFeatureMasonryItem;

const { id, title, description, gridArea, icon, color, showDocker, showHelm } = Astro.props;
---

<div
  class="feature-masonry-item"
  style={{
    gridArea,
  }}
>
  <Icon name={icon} sizeRem={2.5} color={color} weight="duotone" class="feature-masonry-icon" />
  <Icon name={icon} color={color} weight="light" class="feature-masonry-bg-icon" />
  <div class="title-and-description">
    <h3>{title}</h3>
    <p class="description">
      {description}
    </p>
    <div class="perks">
      {
        showHelm && (
          <span class="small feature-masonry-perk">
            <Image alt="kubernetes logo" src={kubernetesLogo} width={18} height={18} />
            Kubernetes
          </span>
        )
      }
      {
        showDocker && (
          <span class="small feature-masonry-perk">
            <Image alt="docker logo" src={dockerLogo} width={20} height={20} />
            Docker
          </span>
        )
      }
    </div>
  </div>
</div>

<style lang="scss">
  @use '../../styles/mixins';

  .feature-masonry-item {
    @include mixins.card-mobile;
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: var(--space-l);
    align-items: center;

    .title-and-description {
      z-index: 1;
    }

    .description {
      display: flex;
      flex-direction: column;
      gap: var(--space-s);
      align-items: center;
    }

    .perks {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: var(--space-l);

      span {
        display: flex;
        align-items: center;
        gap: var(--space-s);
        font-size: 1rem;
        color: var(--color-text-secondary);
      }
    }

    .feature-masonry-perk {
      display: flex;

      > img {
        opacity: 0.7;
      }
    }

    @include mixins.respond-to('tablet') {
      @include mixins.card-desktop;
      min-height: 17rem;
      text-align: center;
    }
  }
  :global(.feature-masonry-bg-icon) {
    @include mixins.card-bg-icon;
  }
</style>
