---
import FeatureMasonryItem from './FeatureMasonryItem.astro';
import { featureMasonryItems } from './data';
import type { TFeatureMasonryItem } from './types';
---

<div class="feature-masonry">
  {featureMasonryItems.map((item, idx) => <FeatureMasonryItem {...item} />)}
</div>

<style lang="scss">
  @use '../../styles/mixins';

  .feature-masonry {
    display: flex;
    flex-direction: column;

    @include mixins.respond-to('tablet') {
      display: grid;
      column-count: 3;
      grid-template-columns: repeat(3, 1fr);
      grid-gap: var(--space-l);
    }
  }
</style>
