---
import { InfoIcon } from '@phosphor-icons/react';

const { ...other } = Astro.props;
---

<p class:list={[other.class, 'help']}>
  <slot name="icon">
    <InfoIcon />
  </slot>
  <slot />
</p>

<style lang="scss">
  .help {
    max-width: 50ch;
    font-size: 0.875rem;
    color: var(--color-text-secondary);

    > svg {
      translate: -1px 3px;
    }
  }
</style>
