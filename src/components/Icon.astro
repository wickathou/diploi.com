---
import * as icons from '@phosphor-icons/react';
import type { Icon as IconComponent, IconProps } from '@phosphor-icons/react';

type Props = {
  name: keyof typeof icons;
  size?: number | string;
  isGradient?: boolean;
  weight?: IconProps['weight'];
  color?: string;
  class?: string;
  sizeRem?: number;
};

const { size = 24, sizeRem = 1.5, isGradient = false, class: className, weight = 'light', color } = Astro.props;

const Component = icons[Astro.props.name] as IconComponent;
---

<Component
  size={size}
  weight={weight}
  className={`icon${isGradient ? ' gradient' : ''} ${className || ''}`}
  color={color}
  style={{
    width: `${sizeRem}rem`,
    height: `${sizeRem}rem`,
  }}
/>

<style>
  .icon {
    flex-shrink: 0;
    width: 1.5rem;
    height: 1.5rem;

    &.gradient {
      fill: url(#gradient-one);
    }
  }
</style>
