---
import { getCollection, render } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import { Navigation, Footer, Section } from '../../components';
import { User, CalendarBlank, DevToLogo, ArrowSquareOut } from '@phosphor-icons/react';

import 'github-markdown-css/github-markdown.css';

export async function getStaticPaths() {
  const articles = await getCollection('alternative');
  return articles.map((article) => ({
    params: { alternative: article.data.slug },
    props: { entry: article },
  }));
}

const { entry } = Astro.props;
const alternative = entry.data;

const { Content } = await render(entry);
---

<Layout title={alternative.title} description={alternative.description}>
  <Navigation />
  <main>
    <Section>
      <div class="title">
        <h1 class="text-gradient">{entry.data.title}</h1>
        <div class="info">
          <p><User /> {entry.data.author}</p>
          <p>
            <CalendarBlank />
            {
              new Date(entry.data.timestamp).toLocaleDateString('en-US', {
                month: 'long',
                day: 'numeric',
                year: 'numeric',
              })
            }
          </p>
        </div>
      </div>
      <article class="article markdown-body">
        <Content />
      </article>
    </Section>
  </main>
  <Footer />
</Layout>

<style>

  .title {
    display: flex;
    align-items: center;
    flex-direction: column;
    width: 100%;
    overflow: hidden;
  }

  .title h1 {
    position: relative;
    margin: 0;
    max-width: 22ch;
    text-align: center;
    font-size: var(--font-header-size);
    font-weight: bold;
    font-family: var(--font-header);
    line-height: 1.2;
  }

  .title h1::after {
    content: '';
    display: block;
    position: absolute;
    top: 50%;
    left: 50%;
    width: min(300px, 30vw);
    aspect-ratio: 2/1;
    background-image: url(/starfield.svg);
    background-size: 50%;
    background-repeat: no-repeat;
    background-position: center;
    z-index: -1;
    transform: translate(-50%, -50%) scale(6) rotate(45deg);
    opacity: 0.2;
  }

  .title .info {
    display: flex;
    align-items: center;
    gap: 16px;
    margin-top: 16px;
    margin-bottom: 16px;

    > p {
      display: flex;
      align-items: center;
      gap: 6px;
    }
  }
  .article {
    max-width: 768px;
    margin: 0 auto;
    p:has(img:first-child:last-child) {
      margin: 0;
      opacity: 1;
    }

    img {
      width: auto;
      max-width: 768px;
      height: auto;
      border-radius: 12px;
    }

    p {
      max-width: 100%;
    }

    a {
      text-decoration: underline;
    }

    figure {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: var(--space-m);
      margin: var(--space-xxl) 0;
      width: 100%;

      > img {
        width: 100%;
        max-width: 400px;
      }

      > figcaption {
        font-style: italic;
        font-size: 16px;
        opacity: 0.7;
      }
    }

    hr {
      display: flex;
      justify-content: center;
      border: none;
      margin: 40px 0;

      &::before {
        content: '‚ÅÇ';
        color: white;
        opacity: 0.2;
      }
    }
  }
</style>
