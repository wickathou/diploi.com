---
import { Image } from 'astro:assets';
import { getCollection, render } from 'astro:content';
import { ArrowSquareOut, CalendarBlank, DevToLogo, User } from '@phosphor-icons/react';
import { Footer, GetStarted, Section } from '../../components';
import Navigation from '../../components/Navigation/Navigation.astro';
import Layout from '../../layouts/Layout.astro';
import { createBlogPostSchema } from './_utils/createBlogPostSchema';
import 'github-markdown-css/github-markdown.css';

export async function getStaticPaths() {
  const articles = await getCollection('blog');
  return articles.map((article) => ({
    params: { article: article.data.slug },
    props: { entry: article },
  }));
}

const { entry } = Astro.props;

const { Content } = await render(entry);

const schema = createBlogPostSchema({
  ...entry.data,
  url: new URL(Astro.url.pathname, Astro.site),
  externalUrl: entry.data.url,
});
---

<Layout
  title={`Diploi - ${entry.data.title}`}
  description={`${entry.data.description}`}
  ogTitle={entry.data.title}
  ogSocialImage={entry.data.social_image?.src || entry.data.image?.src || entry.data.external_image}
  ogUrlMatchCanonical={true}
>
  <script slot="head" type="application/ld+json" set:html={JSON.stringify(schema)} />
  <Navigation selected="blog" />
  <main>
    <Section>
      {
        (entry.data.image || entry.data.external_image) && (
          <Image
            class="cover"
            alt="Cover image"
            layout="full-width"
            width={1000}
            height={420}
            src={(entry.data.image || entry.data.external_image) as string}
          />
        )
      }
      <div class="title">
        <h1 class="text-gradient">{entry.data.title}</h1>
        <div class="info">
          <p><User /> {entry.data.author}</p>
          <p>
            <CalendarBlank />
            {
              new Date(entry.data.timestamp).toLocaleDateString('en-US', {
                month: 'long',
                day: 'numeric',
                year: 'numeric',
              })
            }
          </p>
        </div>
        {
          entry.data.url && (
            <a href={entry.data.url} class="link">
              <DevToLogo /> Read on Dev.to <ArrowSquareOut />
            </a>
          )
        }
      </div>
      <article class="article markdown-body">
        <Content />
      </article>
    </Section>

    <Section><GetStarted /></Section>
  </main>

  <Footer />
</Layout>

<style>
  main {
    display: flex;
    flex-direction: column;
    align-items: center;
    color: white;
  }

  .title {
    display: flex;
    align-items: center;
    flex-direction: column;
    width: 100%;
    overflow: hidden;
  }

  .title h1 {
    position: relative;
    margin: 0;
    max-width: 22ch;
    text-align: center;
    font-size: var(--font-header-size);
    font-weight: bold;
    font-family: var(--font-header);
    line-height: 1.2;
  }

  .title h1::after {
    content: '';
    display: block;
    position: absolute;
    top: 50%;
    left: 50%;
    width: min(300px, 30vw);
    aspect-ratio: 2/1;
    background-image: url(/starfield.svg);
    background-size: 50%;
    background-repeat: no-repeat;
    background-position: center;
    z-index: -1;
    transform: translate(-50%, -50%) scale(6) rotate(45deg);
    opacity: 0.2;
  }

  .title .info {
    display: flex;
    align-items: center;
    gap: 16px;
    margin-top: 16px;
    margin-bottom: 16px;

    > p {
      display: flex;
      align-items: center;
      gap: 6px;
    }
  }

  .link {
    display: flex;
    align-items: center;
    gap: 6px;
    text-decoration: none;
  }

  .cover {
    align-self: center;
    width: auto;
    height: auto;
    max-width: 100%;
    border-radius: 12px;
  }

  .article {
    max-width: 768px;
    margin: 0 auto;
    p:has(img:first-child:last-child) {
      margin: 0;
      opacity: 1;
    }

    img {
      width: auto;
      max-width: 768px;
      height: auto;
      border-radius: 12px;
    }

    p {
      max-width: 100%;
    }

    a {
      text-decoration: underline;
    }

    figure {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: var(--space-m);
      margin: var(--space-xxl) 0;
      width: 100%;

      > img {
        width: 100%;
        max-width: 400px;
      }

      > figcaption {
        font-style: italic;
        font-size: 16px;
        opacity: 0.7;
      }
    }

    hr {
      display: flex;
      justify-content: center;
      border: none;
      margin: 40px 0;

      &::before {
        content: 'â‚';
        color: white;
        opacity: 0.2;
      }
    }
  }

  .callout {
    position: relative;
    margin-top: 128px;
  }

  .callout h2 {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-top: 0;
  }

  .callout h2 > svg {
    fill: url(#gradient-three);
  }

  .callout::after {
    content: '';
    display: block;
    position: absolute;
    top: -48px;
    left: -48px;
    width: calc(100% + 96px);
    height: calc(100% + 96px);
    border-radius: 24px;
    background-image: linear-gradient(-45deg, var(--color-primary), var(--color-secondary));
    opacity: 0.1;
    z-index: -1;
  }

  .callout form {
    display: flex;
    gap: 16px;
  }

  .text-gradient {
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
  }

  .email {
    text-decoration: none;
    color: var(--color-white);
  }

  @media (max-width: 900px) {
    .callout::after {
      display: none;
    }

    .callout form {
      flex-direction: column;
    }
  }
</style>
