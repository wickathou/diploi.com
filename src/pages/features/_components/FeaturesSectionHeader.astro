---
import type { HTMLAttributes } from 'astro/types';

type Props = HTMLAttributes<'header'>;

const props = Astro.props;
---

<header {...props}>
  <slot />
</header>

<style lang="scss">
  @use '../../../styles/mixins';

  header {
    > :global(h2) {
      display: flex;
      align-items: center;
      gap: 16px;

      > :global(span) {
        transform: translateY(2px);
      }
    }

    > :global(svg) {
      width: 32px;
      height: 32px;
      color: var(--color-text-secondary);
    }

    > :global(p) > :global(a) {
      text-underline-offset: 4px;
      color: inherit;
    }
  }
</style>
