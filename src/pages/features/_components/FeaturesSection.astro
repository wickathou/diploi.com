---
import type { HTMLAttributes } from 'astro/types';

type Props = HTMLAttributes<'article'>;

const props = Astro.props;
---

<article {...props}>
  <slot name="header" />
  <slot />
</article>

<style>
  article {
    display: flex;
    flex-direction: column;
    gap: 48px;
    margin: 0 auto;
    width: 100%;
    max-width: var(--max-width-page-section);
  }
</style>
