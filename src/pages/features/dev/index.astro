---
import Footer from '../../../components/Footer.astro';
import Navigation from '../../../components/Navigation/Navigation.astro';
import { features } from '../../../content/features';
import Layout from '../../../layouts/Layout.astro';
import LovableHr from '../../lovable/_components/LovableHr.astro';
import LovableTeamwork from '../../lovable/_components/LovableTeamwork.astro';
import FeaturesCallouts from '../_components/FeaturesCallouts.astro';
import DevEditors from './_components/DevEditors.astro';
import DevHero from './_components/DevHero.astro';
import DevLifecycle from './_components/DevLifecycle.astro';
import DevResources from './_components/DevResources.astro';
import DevStackBuilder from './_components/DevStackBuilder.astro';

const feature = features.find((feature) => feature.id === 'dev')!;
---

<Layout
  title={`Diploi for ${feature.title} - ${feature.description}`}
  description="Diploi is the all-in-one remote development platform â€” one platform from code to deployment."
  ogUrlMatchCanonical={true}
>
  <Navigation />
  <main>
    <DevHero />
    <LovableHr />
    <DevLifecycle />
    <LovableHr />
    <DevEditors />
    <LovableHr />
    <LovableTeamwork />
    <LovableHr />
    <DevStackBuilder />
    <LovableHr />
    <DevResources />
    <FeaturesCallouts hide={['dev']} />
  </main>
  <Footer />
</Layout>

<style>
  main {
    gap: 128px;

    @media (max-width: 860px) {
      gap: 64px;
    }
  }
</style>
